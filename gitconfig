[credential]
	helper = cache --timeout=3600

[core]
	editor = vim
	excludesfile = /home/sevko/.dotfiles/git/gitignore

[merge]
	tool = vimdiff

[push]
	default = simple

[color]
	ui = auto

[color "branch"]
	current = yellow
	local = yellow
	remote = magenta

[color "diff"]
	meta = 5
	frag = 9 bold
	old = 1
	new = 4
	whitespace = white reverse

[color "status"]
	added = green
	changed = red bold
	untracked = cyan
	branch = red bold

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
